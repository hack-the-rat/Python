def leap_year(year):
  if year % 100 == 0:
    if year %  400 == 0:
      print(f"{year} is a leap year.")
      return True
    else:
      print(f"{year} is not a leap year.")
      return False
  elif year % 4 == 0:
    print(f"{year} is a leap year.")
    return True
  else:
    print(f"{year} is not a leap year.")
    return False

x = leap_year(int(input('Enter any year: ')))
print(x)
